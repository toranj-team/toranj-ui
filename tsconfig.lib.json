{
  "compilerOptions": {
    "outDir": "toranj-ui",
    "declaration": true,
    "declarationDir": "types",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "include": ["src/components/lib/**/*.ts", "src/components/lib/**/*.tsx"],
  "exclude": [
    ".next",
    "node_modules",
    "toranj-ui"
  ]
}